%nav.navbar.navbar-default.navbar-fixed-top#navbar_top_navigation
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => "#navbar_top", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to('Home', root_path, class: 'navbar-brand')
    .collapse.navbar-collapse#navbar_top
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'
      %ul.nav.navbar-nav.navbar-right
        = render 'layouts/user_links'
