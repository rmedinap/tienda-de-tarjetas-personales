%p
  %b Nombre:
  = @contact.name
%p
  %b Email:
  = @contact.email
%p
  %b Número de documento:
  = @contact.document_number
%p
  %b Teléfono:
  = @contact.phone
%p
  %b Tipo de contacto:
  = Contact::CONTACT_TYPE.detect{|k| k[1] == @contact.contact_type.to_i}[0]
%p
  %b Descripción:
  = @contact.description
%p
  %b Usuario:
  = @contact.user
%br
- if @contact.own_design.present?
  %b Diseño propio:
  = image_tag @contact.own_design.detail

= edit_tool @contact
= list_tool Contact
